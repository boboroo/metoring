<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.mentoring.sample.data.db.entities.RecentlyViewedProduct" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgv"
            android:layout_width="110dp"
            android:layout_height="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tool:src="@drawable/ic_launcher_background"
            app:setGlide="@{model.image}"
            android:scaleType="centerCrop"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/imgv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tool:text="상품"
                android:text="@{model.name}"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tool:text="가격"
                android:text="@{String.valueOf(model.price)}"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:focusable="false"/>

        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="-7dp"
            android:background="@color/gray"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>